<%var i=0;%>
<table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col"  style="width: 5%">#</th>
        <th scope="col"  style="width: 20%">Problem Name</th>
        <th scope="col" style="width: 20%">Tags</th>
        <th scope="col">Status</th>
        <th scope="col">Time Of Submission</th>    
        <th scope="col">Code</th>
      </tr>
    </thead>
    <tbody>
            
        <%data["result"].forEach(function(dat){%>
          <tr>
            
            <th scope="row"><%=i++%></th>
            <%var problemlink="https://codeforces.com/problemset/problem/"+dat.problem.contestId+"/"+dat.problem.index    %> 
            <td><a href=<%=problemlink%>><%=dat.problem.name%></a></td>
                    <td>
                       <% dat.problem.tags.forEach(function(val){%>
                            <%=val.charAt(0).toUpperCase() + val.slice(1);  %> ,     
                        <%})%>
                    </td>
                    <!-- <td><%=dat.verdict%></td> -->
                    <%if(dat.verdict=="WRONG_ANSWER"){%>
                      <td style="color:red;"><%=dat.verdict%></td>
                   <%}else if(dat.verdict=="OK"){%>
                      <td style="color:green;">CORRECT ANSWER</td>
                    <%}else{%>
                      <td><%=dat.verdict%></td>
                    <%}%>
                     
                   




                    <%var theDate = new Date(dat.creationTimeSeconds * 1000);%>
                    <%dateString = theDate.toUTCString();%>
                    <td><%=new Date(dateString).toDateString()%></td>
                   <% var codeurl="https://codeforces.com/contest/";%>
                  <%   var full=codeurl+dat.problem.contestId+"/submission/"+"dat.id"%>
                    <td><a href= <%=full%> >View Code</a></td>
                  </tr>
            
            
        <%});%>
         </tbody>
  </table>





